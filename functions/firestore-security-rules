rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated admin users or Cloud Functions can access blocked_users
    match /blocked_users/{userId} {
      allow read, write: if false; // Deny all client access
      // Cloud Functions have admin access by default
    }
    
    // Add other collections as needed
    match /sos_alerts/{alertId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}